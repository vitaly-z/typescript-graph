{
  "name": "@ysk8hori/typescript-graph",
  "version": "0.6.1",
  "description": "A CLI to visualize the dependencies between files in the TypeScript codebase.",
  "main": "index.js",
  "homepage": "https://github.com/ysk8hori/typescript-graph",
  "bin": {
    "tsg": "./bin/tsg.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "keywords": [
    "TypeScript",
    "dependencies",
    "dependencies graph"
  ],
  "scripts": {
    "run": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts",
    "run:help": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -h",
    "run:sample": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -d './dummy_project'",
    "run:sample:include": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -d './dummy_project' --include includeFiles config",
    "run:sample:exclude": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -d './dummy_project' --include includeFiles config --exclude excludeFiles utils",
    "run:sample:abstraction": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -d './dummy_project' --include includeFiles config --exclude excludeFiles utils --abstraction abstractions",
    "run:sample:link": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts --mermaid-link",
    "run:sample:README": "ts-node -O '{\"module\": \"commonjs\"}' ./src/index.ts -d /Users/horiyousuke/Documents/dev/numberplace --include src/components/atoms/ConfigMenu --exclude test stories node_modules",
    "build": "rm -r ./dist && tsc",
    "lint:fix": "eslint --fix src",
    "prettier": "prettier --write ./src",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run test & npm run build"
  },
  "author": "ysk8hori",
  "license": "ISC",
  "dependencies": {
    "commander": "^9.5.0",
    "neo4j-driver": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "vitest": "^0.26.3"
  },
  "peerDependencies": {
    "typescript": "^4.9.4"
  }
}
